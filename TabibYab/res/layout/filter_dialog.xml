<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <TextView
        android:id="@+id/vicinityoftextview"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:text="@string/vicinity_of" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical" >

        <CheckBox
            android:id="@+id/search_current_location_checkbox"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:checked="true"
            android:text="@string/current_location" />

    <EditText
        android:id="@+id/vicinityOfAddress"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ems="10"
        android:enabled="false"
        android:inputType="textPostalAddress" >

        <requestFocus />
    </EditText>
    </LinearLayout>

    <TextView
        android:id="@+id/distant_from_me_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:text="@string/distance_from_me" />
    
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal" >

        <ToggleButton
            android:id="@+id/lessThan2point5kmButton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="@string/less_than_2.5km"
            android:textOff="@string/less_than_2.5km"
            android:textOn="@string/less_than_2.5km" />

        <ToggleButton
            android:id="@+id/lessThan5kmButton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="@string/less_than_5km"
            android:textOff="@string/less_than_5km"
            android:textOn="@string/less_than_5km" />

        <ToggleButton
            android:id="@+id/lessThan10kmButton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="@string/less_than_10km"
            android:textOff="@string/less_than_10km"
            android:textOn="@string/less_than_10km" />

        <ToggleButton
            android:id="@+id/lessThan20kmButton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="@string/less_than_20km"
            android:textOff="@string/less_than_20km"
            android:textOn="@string/less_than_20km" />
        
    </LinearLayout>

    <TextView
        android:id="@+id/clinicTypeTextViewDialog"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:text="@string/clinic_type" />

    <Spinner
        android:id="@+id/clinicTypeSpinnerDialog"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <TextView
        android:id="@+id/specialityTextViewFilterDialog"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:text="@string/clinic_speciality" />

    <Spinner
        android:id="@+id/specialityLevelSpinnerFilterDialog"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <Spinner
        android:id="@+id/specialitySpinnerFilterDialog"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

</LinearLayout>